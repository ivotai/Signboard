<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   tools:ignore="HardcodedText,SpUsage"
                                                   android:layout_width="match_parent"
                                                   android:padding="16dp"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/ivImage"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="90dp" tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/md_black"
              android:textSize="18dp"
              android:id="@+id/tvAddress"
              android:text="门牌地址"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/ivImage"
              android:layout_marginStart="16dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/md_grey_600"
              android:textSize="16dp"
              android:id="@+id/tvName"
              android:text="商户名称"
              app:layout_constraintTop_toBottomOf="@+id/tvAddress"
              android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/tvAddress"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/md_grey_500"
              android:textSize="14dp"
              android:id="@+id/tvRegistrationTime"
              android:text="时间"
              app:layout_constraintBottom_toBottomOf="@+id/ivImage"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>